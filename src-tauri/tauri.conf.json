{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PathKey Desktop",
  "version": "0.1.0",
  "identifier": "com.pathkey.desktop",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../apps/desktop/dist"
  },
  "app": {
    "windows": [
      {
        "title": "PathKey Console",
        "width": 1060,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 900,
        "minHeight": 560,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "targets": "all",
    "resources": [
      "../LICENSE",
      "../LICENSE-MIT",
      "../LICENSE-PATHKEY",
      "../NOTICE"
    ]
  }
}
